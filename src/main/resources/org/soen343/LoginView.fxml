<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="login" prefHeight="900.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.soen343.controllers.LoginController">
    <children>
        <BorderPane layoutX="-6.0" layoutY="-10.0" prefHeight="900.0" prefWidth="1200.0" style="-fx-background-color: #fff;">
            <left>
                <Pane prefHeight="513.0" prefWidth="385.0" style="-fx-background-color: #87cefa;" BorderPane.alignment="CENTER">
                    <children>
                        <HBox layoutX="14.0" layoutY="15.0" prefHeight="14.0" prefWidth="118.0" spacing="10.0">
                            <children>
                                <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true" />
                                <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true" />
                                <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true" />
                            </children>
                        </HBox>
                  <ImageView fitHeight="281.0" fitWidth="373.0" layoutY="83.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/logo_transparent.png" />
                     </image>
                  </ImageView>
                    </children>
                </Pane>
            </left>
            <center>
                <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Pane fx:id="signUpPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #fff;">
                            <children>
                                <Button fx:id="btnSignUp" layoutX="265.0" layoutY="355.0" mnemonicParsing="false" onAction="#btnSignUpAction" prefHeight="20.0" prefWidth="74.0" text="Signup" />
                                <TextField fx:id="tfUsernameSignUp" layoutX="85.0" layoutY="195.0" prefHeight="50.0" prefWidth="260.0" promptText="Username" />
                                <TextField layoutX="69.0" layoutY="123.0" style="-fx-background-color: #ffffff;" text="Sign-up !">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </TextField>
                        <Label fx:id="invalidSignUpLabel" alignment="CENTER" layoutX="85.0" layoutY="331.0" prefHeight="17.0" prefWidth="258.0" textFill="RED" />
                        <Button fx:id="btnSwitchLogIn" layoutX="85.0" layoutY="438.0" mnemonicParsing="false" onAction="#btnSwitchLogInAction" prefHeight="25.0" prefWidth="247.0" style="-fx-background-color: #ffff;" text="Already have an account? Log in here" textFill="#0f2be1" underline="true" />
                        <PasswordField fx:id="tfPassSignUp" layoutX="85.0" layoutY="271.0" prefHeight="50.0" prefWidth="260.0" promptText="Password" />
                            </children>
                        </Pane>
                        <Pane fx:id="logInPane" prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="tfUsernameLogIn" layoutX="85.0" layoutY="195.0" prefHeight="50.0" prefWidth="260.0" promptText="Username" />
                                <Button fx:id="btnLogIn" layoutX="265.0" layoutY="355.0" mnemonicParsing="false" onAction="#btnLogInAction" prefHeight="20.0" prefWidth="74.0" text="Login" />
                                <Button fx:id="btnSwitchSignUp" layoutX="90.0" layoutY="438.0" mnemonicParsing="false" onAction="#btnSwitchSignUpAction" prefHeight="25.0" prefWidth="247.0" style="-fx-background-color: #ffff;" text="Don't have an account? Create one here" textFill="#0f2be1" underline="true" />
                                <TextField layoutX="66.0" layoutY="123.0" style="-fx-background-color: #ffffff;" text="Login">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </TextField>
